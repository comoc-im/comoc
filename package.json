{
  "name": "comoc",
  "version": "0.1.0",
  "description": "Comoc desktop APP",
  "main": "main.js",
  "repository": "git@github.com:comoc-im/comoc.git",
  "author": "Naeemo <naeemo@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/comoc-im/comoc",
  "bugs": "https://github.com/comoc-im/comoc/issues",
  "private": false,
  "scripts": {
    "dev": "vite",
    "dev-preview": "export NODE_ENV=development && electron .",
    "build": "vue-tsc && vite build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "directories": {
      "output": "out"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "src/logo.png"
    }
  },
  "dependencies": {
    "@comoc-im/message": "^0.1.7",
    "@element-plus/icons-vue": "^0.2.4",
    "@types/uuid": "^8.3.4",
    "element-plus": "^1.3.0-beta.5",
    "hash-wasm": "^4.9.0",
    "pinia": "^2.0.9",
    "randomcolor": "^0.6.2",
    "register-service-worker": "^1.7.1",
    "uuid": "^8.3.2",
    "vue": "^3.2.20",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@types/randomcolor": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-typescript": "^10.0.0",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.0",
    "sass": "^1.48.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.12",
    "vue-tsc": "^0.30.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|js|json|md|html)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
