{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "types": [
      "node",
      "vite/client"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.d.ts"
  ]
}
