{
  "name": "@comoc/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Comoc IM",
  "main": "main.js",
  "repository": "git@github.com:comoc-im/comoc.git",
  "author": "Naeemo <naeemo@qq.com>",
  "license": "Apache License 2.0",
  "homepage": "https://github.com/comoc-im/comoc",
  "bugs": "https://github.com/comoc-im/comoc/issues",
  "scripts": {
    "dev": "pnpm -F @comoc/app dev",
    "dev-preview": "pnpm -F @comoc/app dev-preview",
    "build-web": "pnpm -F @comoc/app build-web",
    "build": "pnpm -F @comoc/app build"
  },
  "build": {
    "directories": {
      "output": "out"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "src/logo.png"
    }
  },
  "dependencies": {
    "@capacitor/android": "^4.3.0",
    "@capacitor/core": "^4.3.0",
    "@capacitor/ios": "^4.3.0",
    "@comoc-im/message": "^0.1.8",
    "@element-plus/icons-vue": "^2.0.9",
    "@types/uuid": "^8.3.4",
    "element-plus": "^2.2.17",
    "hash-wasm": "^4.9.0",
    "pinia": "^2.0.22",
    "randomcolor": "^0.6.2",
    "register-service-worker": "^1.7.1",
    "smoothscroll-polyfill": "^0.4.4",
    "uuid": "^9.0.0",
    "vant": "3.6.3",
    "vue": "^3.2.40",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^4.3.0",
    "@comoc/id": "^0.0.6",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.8.3",
    "@types/randomcolor": "^0.5.6",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/compiler-sfc": "^3.2.40",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "typescript": "^4.8.4",
    "unplugin-vue-components": "^0.22.8",
    "vconsole": "^3.14.7",
    "vite": "^3.1.6",
    "vite-plugin-pwa": "^0.13.1",
    "vue-tsc": "^0.40.13",
    "workbox-build": "^6.5.4",
    "workbox-window": "^6.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|js|json|md|html)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "workbox-build": "^6.5.2",
    "workbox-window": "^6.5.2"
  }
}
